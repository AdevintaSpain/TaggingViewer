<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
    >
  <TextView
      android:id="@+id/detailItemTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="top"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:layout_marginTop="20dp"
      tools:text="@tools:sample/date/hhmmss"
      />
  <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >
      <View
          android:id="@+id/detailItemLineTop"
          android:layout_width="3dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/tgv_detail_timeline_line"
          />
      <View
          android:id="@+id/detailItemLineBottom"
          android:layout_width="3dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:background="@color/tgv_detail_timeline_line"
          />
    </LinearLayout>
    <ImageView
        android:id="@+id/detailItemIcon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/tgv_marker_event"
        />
  </FrameLayout>
  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="8dp"
      app:cardBackgroundColor="@color/tgv_detail_background"
      app:cardCornerRadius="4dp"
      app:cardElevation="0dp"
      app:contentPadding="8dp"
      >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <TextView
          android:id="@+id/detailItemTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:textColor="?android:textColorPrimary"
          android:textSize="18sp"
          tools:text="Some event"
          />
      <TextView
          android:id="@+id/detailItemExtra"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/detailItemTitle"
          android:textColor="?android:textColorSecondary"
          tools:text="@tools:sample/lorem/random"
          />
    </RelativeLayout>
  </androidx.cardview.widget.CardView>


</LinearLayout>
