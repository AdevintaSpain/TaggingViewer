<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    >

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:layout_marginTop="2dp"
      android:layout_marginBottom="2dp"
      android:background="@drawable/tgv_overlay_item_background"
      android:orientation="horizontal"
      >

    <TextView
        android:id="@+id/tracking_name"
        style="@style/tgv_item_tracking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:lines="1"
        android:paddingStart="8dp"
        tools:text="Some Event Name"
        />

    <ImageView
        android:id="@+id/tracking_indicator"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        tools:src="@drawable/tgv_marker_event"
        />

  </LinearLayout>
</FrameLayout>
