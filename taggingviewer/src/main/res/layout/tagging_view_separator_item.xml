<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="start"
              android:gravity="start"
              android:orientation="horizontal"
    >

  <TextView
      android:id="@+id/tracking_activity_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="end"
      android:lines="1"
      android:ellipsize="end"
      style="@style/tgv_item_tracking_name"
      tools:text="Activity"
      />

  <View
      android:id="@+id/tracking_activity_separator"
      android:background="@color/tgv_item_separator_tracking_name_background_color"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/tgv_item_separator_tracking_height"
      android:layout_marginLeft="4dp"
      android:layout_marginRight="4dp"
      android:layout_gravity="center_vertical"
      />

</LinearLayout>
